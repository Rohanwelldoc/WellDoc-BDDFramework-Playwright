{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "lib": ["ES2020", "DOM"],

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": false,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node", "@cucumber/cucumber"],

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
