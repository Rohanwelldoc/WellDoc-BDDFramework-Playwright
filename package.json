{
  "name": "welldoc-bddframework",
  "version": "1.0.0",
  "description": "BDD framework using Cucumber + Playwright + Allure",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "if exist test-results rmdir /s /q test-results",
    "pretest:bdd": "npm run clean",

    
    "test:bdd": "cucumber-js \"src/test/features/*.feature\" --format json:test-results/cucumber_report_all.json || exit 0",



    "test:user": "set REPORT_NAME=user && cucumber-js \"src/test/features/*.feature\" --tags \"@UserManagement\" --format json:test-results/cucumber_report_user.json || exit 0",
    "test:login": "set REPORT_NAME=login && cucumber-js src/test/features/login.feature --tags \"@Login\" --format json:test-results/cucumber_report_login.json",

 
    "posttest:bdd": "npx ts-node src/helper/util/sendMail.ts test-results/cucumber_report_all.json",
    "posttest:user": "npx ts-node src/helper/util/sendMail.ts test-results/cucumber_report_user.json",
    "posttest:login": "npx ts-node src/helper/util/sendMail.ts test-results/cucumber_report_login.json",

  
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open",

   
    "report:all": "npx cucumber-html-reporter --theme bootstrap --jsonFile test-results/cucumber_report_all.json --output test-results/all_report.html",
    "report:user": "npx cucumber-html-reporter --theme bootstrap --jsonFile test-results/cucumber_report_user.json --output test-results/user_report.html",
    "report:login": "npx cucumber-html-reporter --theme bootstrap --jsonFile test-results/cucumber_report_login.json --output test-results/login_report.html"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "@playwright/test": "^1.57.0",
    "@types/archiver": "^7.0.0",
    "@types/node": "^24.10.4",
    "@types/nodemailer": "^7.0.4",
    "allure-cucumberjs": "^3.4.3",
    "archiver": "^7.0.1",
    "archiver-zip-encrypted": "^2.0.0",
    "cucumber-html-reporter": "^7.2.0",
    "dotenv": "^17.2.3",
    "nodemailer": "^6.10.1",
    "playwright-bdd": "^8.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "winston": "^3.19.0"
  }
}
